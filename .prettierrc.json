{
  "useTabs": false,
  "printWidth": 140,
  "tabWidth": 2,
  "singleQuote": true,
  "semi": false,
  "arrowParens": "always",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "htmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    }
  ]
}
